#!/usr/bin/env bash

NAME=".uuenv"

if [ ! -x "$(which realpath)" ]; then
  echo "[${NAME}] The 'realpath' is not installed"
  exit 1
fi

SCRIPT=$(realpath "${BASH_SOURCE[0]}")
DIR=$(dirname "$(dirname "${SCRIPT}")")
NAME=$(basename "${DIR}")

if [ -f "${DIR}/lib/functions" ]; then
  . "${DIR}/lib/functions"
else
  echo "[${NAME}] Cannot include: '${DIR}/lib/functions'"
  exit 1
fi

if [ ! -d "${HOME}/workspace" ]; then
  mkdir "${HOME}/workspace"
fi

# GO
if [ ! -d "${HOME}/workspace/go/bin" ]; then
  mkdir "${HOME}/workspace/go/bin"
fi

if [ ! -d "${HOME}/workspace/go/src" ]; then
  mkdir "${HOME}/workspace/go/src"
fi

configure_uenv
configure_bash
configure_git
configure_profile

