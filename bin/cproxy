#!/usr/bin/env bash
#
# Console proxy: cproxy

NAME="cproxy"

if [ ! -x "$(which realpath)" ]; then
  echo "[${NAME}] The 'realpath' is not installed"
  exit 1
fi

ACTION=${1,,}
SCRIPT=$(realpath ${BASH_SOURCE[0]})
NAME=$(basename ${SCRIPT})
DIR=$(dirname ${SCRIPT})

PROXY_TYPE=$(head -n 1 "${DIR}/../etc/${NAME}.type")
PROXY_ADDR=$(head -n 1 "${DIR}/../etc/${NAME}.addr")
PROXY="${PROXY_TYPE}://${PROXY_ADDR}"

case "${ACTION}" in
  start)
      export PROXY_TYPE
      export PROXY_ADDR
      export PROXY

      # --[ SOCKS/SOCKS5 ]--
      case "${PROXY_TYPE}" in
        socks|socks5)
          export SOCKS_SERVER="${PROXY_ADDR}"
          export SOCKS_PROXY="${PROXY}"
        ;;
      esac

      # --[ SOCKS5 ]--
      case "${PROXY_TYPE}" in
        socks5)
          export SOCKS5_PROXY="${PROXY}"
        ;;
      esac

      # --[ HTTP/HTTPS ]--
      export HTTP_PROXY="${PROXY}"
      export HTTPS_PROXY="${PROXY}"

      git config --global http.proxy "${PROXY}"
      git config --global https.proxy "${PROXY}"

      echo "${ACTION^}: ${NAME} (${PROXY}) ... [ OK ]"
    ;;
  stop)
      unset HTTP_PROXY
      unset HTTPS_PROXY

      unset SOCKS_PROXY
      unset SOCKS5_PROXY

      unset SOCKS_SERVER

      unset PROXY
      unset PROXY_TYPE
      unset PROXY_ADDR

      git config --global --unset http.proxy
      git config --global --unset https.proxy

      # Remove section
      git config --global --remove-section http
      git config --global --remove-section https

      echo "${ACTION^}: ${NAME} ... [ OK ]"
    ;;
  env)
      echo "NetStat:"
      netstat -ntl | grep "${PROXY_ADDR}"
      echo "Environment:"
      env | grep "SOCKS\|PROXY"
    ;;
  *)
      echo "Usage: ${NAME} {start|stop|env}"
    ;;
esac

