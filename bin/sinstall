#!/usr/bin/env bash
#
# Server: install base packages

## Update of source list
sudo apt-get update

## Upgrade of installed packages
sudo apt-get upgrade

## Installation of base server packages
sudo apt-get install --reinstall --purge \
  make make-doc cmake cmake-doc \
  gcc cpp g++ binutils autoconf \
  less sed grep realpath psmisc \
  mc htop iftop sockstat net-tools \
  tar zip unzip \
  p7zip p7zip-full p7zip-rar \
  bzip2 bzip2-doc \
  screen vim vim-doc \
  git git-man \
  python python3 \
  libxml2-utils graphviz \
  ntp ntpdate tzdata

